@model ProductVM
@{
    ViewData["Title"] = "Create";
}


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@((Model.Product.Id!=0?"Update":"Create")) Product</h2>
            </div>
        </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row" enctype="multipart/form-data">
                <input type="hidden" asp-for="Product.Id" />
                <input type="hidden" asp-for="Product.ImgaeUrl" />

                <div class="row">
                    <div class="col-10">
                    <div class="border p-3">

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-floating py-2 col-12">
                            <input type="text" class="form-control border-0 shadow" asp-for="Product.Title" />

                            <label asp-for="Product.Title" class="ms-2"> </label>
                            <span asp-validation-for="Product.Title" class="text-danger"></span>

                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Product.Description" class="ms-2 text-muted"> </label>

                            <textarea class="form-control border-0 shadow" asp-for="Product.Description"></textarea>

@*                                                 <span asp-validation-for="Product.Description" class="text-danger"></span>
 *@                           

                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="text" class="form-control border-0 shadow" asp-for="Product.Author" />

                            <label asp-for="Product.Author" class="ms-2"> </label>
                            <span asp-validation-for="Product.Author" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="text" class="form-control border-0 shadow" asp-for="Product.ISBN" />

                            <label asp-for="Product.ISBN" class="ms-2"> </label>
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="text" class="form-control border-0 shadow" asp-for="Product.ListPrice" />

                            <label asp-for="Product.ListPrice" class="ms-2"> </label>
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="text" class="form-control border-0 shadow" asp-for="Product.Price" />

                            <label asp-for="Product.Price" class="ms-2"> </label>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="text" class="form-control border-0 shadow" asp-for="Product.Price50" />

                            <label asp-for="Product.Price50" class="ms-2"> </label>
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="text" class="form-control border-0 shadow" asp-for="Product.Price100" />

                            <label asp-for="Product.Price100" class="ms-2"> </label>
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <select class="form-select border-0 shadow" asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList">
                                <option selected disabled>--Select Category--</option>
                            </select>

                            <label asp-for="@Model.Product.CategoryId" class="ms-2">Categories</label>
                            <span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>

                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" asp-for="Product.ImgaeUrl" />

                            <label asp-for="Product.ImgaeUrl" class="ms-2"> </label>
                            <span asp-validation-for="Product.ImgaeUrl" class="text-danger"></span>

                        </div>

                        <div class="row pt-2">
                            <div class="col-6">

                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="form-control btn btn-primary">
                                        Edit
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="form-control btn btn-primary">
                                        Create
                                    </button>
                                }
                            </div>


                            @*            <input type="submit" class="btn btn-primary form-control" style="width:150px" value="Create" />
                            *@
                            <div class="col-6">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">

                                    Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                    </div>
                    <div class="col-2">
                        <img src="@Model.Product.ImgaeUrl" width="200"  style="border-radius:5px;border:1px solid #bbb9b9" />
                    </div>
                </div>

               
            </form>
        </div>
    </div>


@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


}