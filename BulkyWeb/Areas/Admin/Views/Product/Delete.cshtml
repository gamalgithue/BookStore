@model Product
@{
    ViewData["Title"] = "Delete";
}
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">

            <div class="border p-3">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating py-2 col-12">
                    <input type="text" disabled class="form-control border-0 shadow" asp-for="Title" />

                    <label asp-for="Title" class="ms-2"> </label>
                    <span asp-validation-for="Title" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <textarea class="form-control border-0 shadow" disabled asp-for="Description"></textarea>
                    <label asp-for="Description" class="ms-2"> </label>

                    <span asp-validation-for="Description" class="text-danger"></span>


                </div>

                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" disabled asp-for="Author" />

                    <label asp-for="Author" class="ms-2"> </label>
                    <span asp-validation-for="Author" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" disabled asp-for="ISBN" />

                    <label asp-for="ISBN" class="ms-2"> </label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" disabled asp-for="ListPrice" />

                    <label asp-for="ListPrice" class="ms-2"> </label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" disabled asp-for="Price" />

                    <label asp-for="Price" class="ms-2"> </label>
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" disabled asp-for="Price50" />

                    <label asp-for="Price50" class="ms-2"> </label>
                    <span asp-validation-for="Price50" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input type="text" class="form-control border-0 shadow" disabled asp-for="Price100" />

                    <label asp-for="Price100" class="ms-2"> </label>
                    <span asp-validation-for="Price100" class="text-danger"></span>

                </div>

                <div class="row pt-2">
                    <div class="col-6">
                        <button type="submit" class="form-control btn btn-danger">
                            Delete
                        </button>
                    </div>
                    @*            <input type="submit" class="btn btn-primary form-control" style="width:150px" value="Create" />
                    *@
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">

                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}